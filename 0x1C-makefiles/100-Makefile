# Macros

CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

# Explicit rules
.PHONY: all
all: $(OBJ)
	$(CC) $(OBJ) $(CFLAGS) -o $(NAME)

.PHONY: clean
clean:
	$(RM) -f *~ $(NAME)

.PHONY: oclean
oclean:
	$(RM) -f $(OBJ)

.PHONY: fclean
fclean: clean oclean

.PHONY:re
re: oclean all
